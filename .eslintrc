{
  "extends": [
    "pi",
    "pi/es6",
    "pi/react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "browser": true,
    "$": true,
    "describe": true,
    "it": true,
    "before": true,
    "beforeEach": true,
    "afterEach": true,
  },
  "plugins": [
    "mocha-no-only",
    "output-todo-comments"
  ],
  "rules": {
    "mocha-no-only/mocha-no-only": ["error"],
    "react/jsx-boolean-value": 0,
    "no-console": 1,
    'output-todo-comments/output-todo-comments': [
      'warn', {
        'terms': ['todo'],
        'location': 'start',
      }
    ],
  }
}
